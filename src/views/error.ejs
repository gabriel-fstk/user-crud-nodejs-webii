  <title>Error</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Error</h1>
    <a href="/">Back to Home</a>
  </header>
  
  <main>
    <div class="error-container">
      <h2><%= message %></h2>
      <h3><%= error.status %></h3>
      <% if (error.stack && process.env.NODE_ENV === 'development') { %>
        <pre><%= error.stack %></pre>
      <% } %>
    </div>
  </main>
  
